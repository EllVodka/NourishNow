{% extends 'base.html.twig' %}

{% block title %}Hello LivreurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for c in commandes_prete %}

        <p>{{ c.fkstatus.libelle}}</p>

        <p>Nom : {{ c.fkclient.nom}}</p>
        <p>Prenom : {{ c.fkclient.prenom}}</p>
        <p>Ville de livraison : {{c.fkclient.fkville.libelle}} -- Adresse du restaurant {{c.detailcommandes[0].fkplat.fkrestaurant.lieu}}</p>
        <p>Adresse de livraison : {{c.fkclient.Adresse}} -- Nom du restaurant {{c.detailcommandes[0].fkplat.fkrestaurant.nom}}</p>
        <p>Heure livraison : {{ c.date | date("j/m H:i", "Europe/Paris") }}h</p>

        <a href="{{path( 'app_view_commande_take',{'id' : c.id} ) }}">Accepter la livraison</a>

    {% else %}
    <h1>Il n'y a pas de commande prÃªte pour le moment</h1>
    {% endfor %}
</div>
{% endblock %}
