{% extends 'base.html.twig' %}

{% block title %}Hello LivreurController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% for c in commandes_prete %}

        <p>{{ c.fkstatus.libelle}}</p>

        <p>Nom : {{ c.fkclient.nom}}</p>
        <p>Prenom : {{ c.fkclient.prenom}}</p>
        <p>Adresse de livraison : {{c.fkclient.Adresse}}
        <p>Ville de livraison : {{c.fkclient.fkville.libelle}}
        <p>Heure livraison : {{ c.date | date('H:i') }}</p>
        <a href="{{path( 'app_view_commande_take',{'id' : c.id} ) }}">Accepter la livraison</a>

    {% endfor %}
</div>
{% endblock %}
